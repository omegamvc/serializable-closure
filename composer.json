{
  "name": "omegamvc/serializable-closure",
  "type": "package",
  "description": "Serializable Closure is a PHP package that allows closures to be serialized and stored, enabling their safe use in persistent storage or across requests.",
  "keywords": [
    "php",
    "php8",
    "serializable",
    "closures",
    "serializable-closure",
    "data storage",
    "persistent storage"
  ],
  "homepage": "https://omegamvc.github.io",
  "license": "GPL-3.0",
  "authors": [
    {
      "name": "Adriano Giovannini",
      "email": "agisoftt@gmail.com",
      "homepage": "https://omegamvc.github.io",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=8.2"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.12",
    "phpunit/phpunit": "^11.4",
    "squizlabs/php_codesniffer": "^3.11"
  },
  "autoload": {
    "psr-4": {
      "Omega\\SerializableClosure\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpstan": "XDEBUG_MODE=off php vendor/bin/phpstan analyze",
    "phpcs": "XDEBUG_MODE=off php vendor/bin/phpcs vendor/omegamvc",
    "phpunit": "php vendor/bin/phpunit",
    "phpdoc": "XDEBUG_MODE=off vendor/bin/phpDocumentor.phar",
  },
  "minimum-stability": "stable"
}
